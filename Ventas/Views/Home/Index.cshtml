                                    <button type="submit" id="btnLogn" class="waves-effect waves-light btn">
                                        Iniciar Sesi&oacute;n
                                    </button>
                                </center>
                            </form>
                        </section>
                        <br>
                        <label id="indexMessage" class="has-error">@Html.DisplayFor(m => m.ErrorMessage)</label>
                    </div>
                </div>
                
            </div>
        </div>    
    </div>
</center>

@section Scripts{ 
    @await Html.PartialAsync("_ValidationScriptsPartial")
}



